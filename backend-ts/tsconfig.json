{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // <-- NEU
    "jsx": "react-jsx",                   // <-- NEU
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // falls noch nicht drin
  "exclude": ["node_modules"]
}
